---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <author>{{ site.email }} ({{ site.title }})</author>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed/index.xml" | absolute_url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
      <itunes:image href="{{ '/images/site/podcast.png' | absolute_url }}" />
      <itunes:category text="{{ 'Society & Culture' | xml_escape }}">
        <itunes:category text="{{ 'Personal Journals' | xml_escape }}"></itunes:category>
      </itunes:category>
      <itunes:explicit>yes</itunes:explicit>   
      <itunes:owner>
        <itunes:name>{{ site.title }}</itunes:name>
        <itunes:email>{{ site.email }}</itunes:email>
      </itunes:owner>
      <itunes:author>{{ site.title }}</itunes:author>
      <language>en</language>
    {% for post in site.posts limit: 15 %}
      {% unless post.draft %}
        {% capture spacer %}src="{{ '/images/site/spacer.gif' | absolute_url }}"{% endcapture %}
        {% if post.link %}
          {% capture reference %}
            <p><a href="{{ post.url | absolute_url }}">※</a></p>
          {% endcapture %}
        {% endif %}
        <item>
          {% if post.categories contains 'blog' %}
            <title>{{ post.title | xml_escape }}</title>
          {% endif %}
          {% if post.categories contains 'micro' %}
            {% if post.link %}
              <title>{{ post.title | xml_escape }} {{ '→' | xml_escape }}</title>
            {% endif %}
          {% endif %}
          <author>{{ site.email }} ({{ site.title }})</author>
          <description>
            {{ post.content | replace: 'data-echo', 'src' | replace: spacer, '' | xml_escape }}
            {% if reference %}
              {{ reference | xml_escape }}
            {% endif %}
          </description>
          <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
          {% if post.link %}<link>{{ post.link }}</link>{% else %}<link>{{ post.url | absolute_url }}</link>{% endif %}
          <guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
          {% for tag in post.tags %}
          <category>{{ tag | xml_escape }}</category>
          {% endfor %}
          {% for cat in post.categories %}
          <category>{{ cat | xml_escape }}</category>
          {% endfor %}
          {% if post.audio %}
            <itunes:subtitle>{{ post.content | xml_escape }}</itunes:subtitle>
            <itunes:summary>{{ post.content | xml_escape }}</itunes:summary>
            <enclosure url="{{ post.audio }}" type="audio/mpeg"></enclosure>
          {% endif %}
        </item>
        {% assign reference = '' %}
      {% endunless %}
    {% endfor %}
  </channel>
</rss>
